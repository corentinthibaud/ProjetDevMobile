<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetDevMobile"
        tools:targetApi="31">
        <activity
            android:name=".activity.LaunchActivity"
            android:exported="true"
            android:label="@string/title_activity_launch"
            android:theme="@style/Theme.ProjetDevMobile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AuthenticationActivity"
            android:exported="false"
            android:label="@string/title_activity_authentication"
            android:theme="@style/Theme.ProjetDevMobile"/>
        <activity
            android:name=".activity.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.ProjetDevMobile"/>
        <activity
            android:name=".activity.MountainDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_remontes"
            android:theme="@style/Theme.ProjetDevMobile"/>
        <activity
            android:name=".activity.SlopeDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_pistes"
            android:theme="@style/Theme.ProjetDevMobile"/>
        <activity
            android:name=".activity.ChatActivity"
            android:exported="false"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.ProjetDevMobile"/>
        <activity
            android:name=".activity.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.ProjetDevMobile"/>
    </application>

</manifest>